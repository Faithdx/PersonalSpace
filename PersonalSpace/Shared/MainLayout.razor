@inherits LayoutComponentBase

<MApp Id="app">
    <MAppBar App Flat>
        <MContainer Class="py-0 fill-height">
            <MToolbarTitle>个人简历</MToolbarTitle>
            <MSpacer></MSpacer>
            <MToolbar  Flat>
                <ChildContent>
                    <MTabs Optional="false">
                        @foreach (var link in _links)
                        {
                            <MTab Href="">@link</MTab>
                        }
                    </MTabs>
                    <MSpacer></MSpacer>
                    <MMenu Left
                           Bottom>
                        <ActivatorContent>
                            <MButton Icon @attributes="@context.Attrs">
                                <MIcon>mdi-dots-vertical</MIcon>
                            </MButton>
                        </ActivatorContent>
                        <ChildContent>
                            <MList>
                                @for (var i = 0; i < 5; i++)
                                {
                                    var n = i + 1;
                                    <MListItem @key="n" OnClick="() => {}">
                                        <MListItemTitle>Option @n</MListItemTitle>
                                    </MListItem>
                                }
                            </MList>
                        </ChildContent>
                    </MMenu>
                </ChildContent>
            </MToolbar>
        </MContainer>
    </MAppBar>

    <MMain Class="grey lighten-3">
        <MContainer>
            <MRow>
                <MCol Cols="2">
                    <MSheet Rounded="@("lg")">
                        <MList>
                            @for (int i = 0; i < 5; i++)
                            {
                                <MListItem Link>
                                <MListItemContent>
                                    <MListItemTitle>
                                        List Item @i
                                    </MListItemTitle>
                                </MListItemContent>
                            </MListItem>
                            }

                            <MDivider Class="my-2"></MDivider>

                            <MListItem Link>
                                <MListItemContent>
                                    <MListItemTitle>
                                        Refresh
                                    </MListItemTitle>
                                </MListItemContent>
                            </MListItem>
                        </MList>
                    </MSheet>
                </MCol>
                <MCol>
                    <MSheet MinHeight="@("70vh")" Rounded="@("lg")">
                        <!-- Your content -->
                    </MSheet>
                </MCol>
            </MRow>
        </MContainer>
    </MMain>
</MApp>

@code {
    List<string> _links = new List<string>
    {
        "Dashboard",
        "Messages",
        "Profile",
        "Updates"
    };
}